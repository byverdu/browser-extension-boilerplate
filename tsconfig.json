{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "types/*": ["types/*"],
      "api/*": ["api/*"]
    },
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es2018",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2018", "dom.iterable"],
    "types": ["node", "jest", "enzyme"]
  },
  "include": ["src/**/*", "tests/**/*"]
}
