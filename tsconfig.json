{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "types/*": ["types/*"]
    },
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "ES2020",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2015", "dom.iterable"],
    "types": ["node"]
  },
  "include": ["src/**/*"]
}
